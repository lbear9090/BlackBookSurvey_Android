<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rela_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <RelativeLayout
                android:id="@+id/rela_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rela_editext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:singleLine="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:paddingLeft="8dp"
                        android:textSize="@dimen/app_textsize_semi_regular"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:background="@drawable/editback"
                        android:hint="@string/str_name"
                        android:textColorHint="@color/textgrey"
                        android:textColor="@color/color_black"/>

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:singleLine="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:paddingLeft="8dp"
                        android:textSize="@dimen/app_textsize_semi_regular"
                        android:background="@drawable/editback"
                        android:hint="@string/str_email"
                        android:textColorHint="@color/textgrey"
                        android:layout_below="@+id/edt_name"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/color_black"/>

                    <EditText
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:singleLine="true"
                        android:paddingLeft="8dp"
                        android:textSize="@dimen/app_textsize_semi_regular"
                        android:background="@drawable/editback"
                        android:hint="@string/str_phone"
                        android:inputType="number"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/textgrey"
                        android:layout_below="@+id/edt_email"
                        android:textColor="@color/color_black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela_editext"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/rela_finalresult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp">

                        <CheckBox
                            android:id="@+id/chk_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:button="@drawable/custom_checkbox"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/txt_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_black"
                            android:layout_toRightOf="@+id/chk_result"
                            android:textSize="@dimen/app_textsize_semi_regular"
                            android:text="@string/str_agree_result"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rela_blackbook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/rela_finalresult">

                        <CheckBox
                            android:id="@+id/chk_blackbook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:button="@drawable/custom_checkbox"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/txt_blackbook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_black"
                            android:layout_toRightOf="@+id/chk_blackbook"
                            android:textSize="@dimen/app_textsize_semi_regular"
                            android:text="@string/str_agree_blackbook"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rela_participation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/rela_blackbook">

                        <CheckBox
                            android:id="@+id/chk_participation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:button="@drawable/custom_checkbox"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/txt_participation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_black"
                            android:layout_toRightOf="@+id/chk_participation"
                            android:textSize="@dimen/app_textsize_semi_regular"
                            android:text="@string/str_agree_participation"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_contactby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela_agreement"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/txt_contactby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:gravity="left"
                        android:layout_marginLeft="6dp"
                        android:textSize="@dimen/app_textsize_semi_regular"
                        android:text="I prefer to be contacted by"/>

                    <RelativeLayout
                        android:id="@+id/rela_byemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txt_contactby">

                        <CheckBox
                            android:id="@+id/chk_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:button="@drawable/custom_checkbox"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/txt_emailby"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/color_black"
                            android:layout_toRightOf="@+id/chk_email"
                            android:textSize="@dimen/app_textsize_semi_regular"
                            android:text="Email"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rela_bytelephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/rela_byemail">

                        <CheckBox
                            android:id="@+id/chk_telephone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:button="@drawable/custom_checkbox"
                            android:layout_alignParentLeft="true" />

                        <TextView
                            android:id="@+id/txt_telephoneby"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_black"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/chk_telephone"
                            android:textSize="@dimen/app_textsize_semi_regular"
                            android:text="Telephone"/>

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_sublmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela_contactby"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/yellowbutton"
                        android:text="@string/str_continue"
                        android:textSize="@dimen/app_textsize_regular"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela_sublmit"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp">

                    <TextView
                        android:id="@+id/txt_varify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/app_textsize_semi_regular"
                        android:textColor="@color/color_black"
                        android:text="@string/str_varify"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/truesample"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/txt_varify"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

