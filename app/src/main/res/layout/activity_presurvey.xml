<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <RelativeLayout
        android:id="@+id/rela_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

       <RelativeLayout
           android:id="@+id/rela_service"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_marginTop="5dp">

           <TextView
               android:id="@+id/lbl_service"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/str_service"
               android:textColor="@color/color_black"
               android:layout_marginLeft="8dp"
               android:textSize="@dimen/app_textsize_small"/>

           <RelativeLayout
               android:id="@+id/rela_txtservice"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/mid_grey"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:layout_marginTop="5dp"
               android:layout_below="@+id/lbl_service">

               <TextView
                   android:id="@+id/txt_service"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/str_select_service"
                   android:textColor="@color/cyan_text"
                   android:paddingLeft="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/app_textsize_small"/>

           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1.2dp"
               android:background="@color/line_grey"
               android:layout_below="@+id/rela_txtservice"
               android:layout_marginTop="5dp"/>

       </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_service"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lbl_vendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_vendor"
                android:textColor="@color/color_black"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/app_textsize_small"/>

            <RelativeLayout
                android:id="@+id/rela_txtvendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mid_grey"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lbl_vendor">

                <TextView
                    android:id="@+id/txt_vendor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_select_vendor"
                    android:textColor="@color/cyan_text"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/app_textsize_small"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/line_grey"
                android:layout_below="@+id/rela_txtvendor"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_vendor"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lbl_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_organization"
                android:textColor="@color/color_black"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/app_textsize_small"/>

            <RelativeLayout
                android:id="@+id/rela_txtorganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mid_grey"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lbl_organization">

                <TextView
                    android:id="@+id/txt_organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_select_organization"
                    android:textColor="@color/cyan_text"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/app_textsize_small"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/line_grey"
                android:layout_below="@+id/rela_txtorganization"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_organization"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lbl_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_role"
                android:textColor="@color/color_black"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/app_textsize_small"/>

            <RelativeLayout
                android:id="@+id/rela_txtrole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mid_grey"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lbl_role">

                <TextView
                    android:id="@+id/txt_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_select_role"
                    android:textColor="@color/cyan_text"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/app_textsize_small"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/line_grey"
                android:layout_below="@+id/rela_txtrole"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_role"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lbl_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_rating"
                android:textColor="@color/color_black"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/app_textsize_small"/>

            <RelativeLayout
                android:id="@+id/rela_txtrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mid_grey"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lbl_rate">

                <TextView
                    android:id="@+id/txt_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/str_select_rating"
                    android:textColor="@color/cyan_text"
                    android:textSize="@dimen/app_textsize_small"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/line_grey"
                android:layout_below="@+id/rela_txtrate"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_scoringkeys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rela_rating"
            android:layout_above="@+id/btn_startsurvey"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/lin_border"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:background="@color/dark_grey">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerVertical="true"
                               android:layout_marginRight="10dp"
                               android:src="@drawable/icon_backward"
                               android:layout_toLeftOf="@+id/txt_579"/>

                            <TextView
                                android:id="@+id/txt_579"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/app_textsize_semi_small"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/txt_579"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/icon_forward"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:background="@color/megento">

                            <TextView
                                android:id="@+id/txt_deal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                android:layout_alignParentTop="true"
                                android:textSize="@dimen/app_textsize_semi_small"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/txt_deal_summery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/app_textsize_extra_small"
                                android:layout_below="@+id/txt_deal"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/lin_border"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:background="@color/dark_grey">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_backward"
                                android:layout_toLeftOf="@+id/txt_732"/>

                            <TextView
                                android:id="@+id/txt_732"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/app_textsize_semi_small"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/txt_732"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/icon_forward"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:background="@color/yellow">

                            <TextView
                                android:id="@+id/txt_neutral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                android:layout_alignParentTop="true"
                                android:textSize="@dimen/app_textsize_semi_small"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/txt_neutral_summery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/app_textsize_extra_small"
                                android:layout_below="@+id/txt_neutral"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:background="@drawable/lin_border"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:background="@color/dark_grey">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_backward"
                                android:layout_toLeftOf="@+id/txt_870"/>

                            <TextView
                                android:id="@+id/txt_870"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/app_textsize_semi_small"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/txt_870"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/icon_forward"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:background="@color/color_white">

                            <TextView
                                android:id="@+id/txt_satisfactory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                android:layout_alignParentTop="true"
                                android:textSize="@dimen/app_textsize_semi_small"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/txt_satisfactory_summery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/app_textsize_extra_small"
                                android:layout_below="@+id/txt_satisfactory"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:layout_centerInParent="true"/>


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:weightSum="1"
                        android:background="@drawable/lin_border"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:background="@color/dark_grey">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_backward"
                                android:layout_toLeftOf="@+id/txt_1000"/>

                            <TextView
                                android:id="@+id/txt_1000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/app_textsize_semi_small"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/txt_1000"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/icon_forward"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:background="@color/green">

                            <TextView
                                android:id="@+id/txt_overwhelming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                android:layout_alignParentTop="true"
                                android:textSize="@dimen/app_textsize_semi_small"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/txt_overwhelming_summery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/app_textsize_extra_small"
                                android:layout_below="@+id/txt_overwhelming"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_startsurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_start_survey"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:textColor="@color/color_black"
            android:background="@drawable/yellowbutton"
            android:layout_marginBottom="3dp"
            android:textSize="@dimen/app_textsize_regular"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_customview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_lightblack"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/relabox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_key_performance"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/app_textsize_small"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:background="@color/light_grey"
                android:text="@string/str_key_performance"/>

            <TextView
                android:id="@+id/txt_scoring_keys"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/color_black"
                android:text="@string/str_scroing_keys"
                android:textSize="@dimen/app_textsize_small"
                android:gravity="center_vertical"
                android:background="@color/color_white"
                android:paddingLeft="8dp"
                android:layout_below="@+id/txt_key_performance"/>

            <TextView
                android:id="@+id/txt_vendors"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/app_textsize_small"
                android:gravity="center_vertical"
                android:text="@string/str_vendors"
                android:background="@color/light_grey"
                android:paddingLeft="8dp"
                android:layout_below="@+id/txt_scoring_keys"/>

            <TextView
                android:id="@+id/txt_editprofile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/app_textsize_small"
                android:gravity="center_vertical"
                android:text="@string/str_editprofile"
                android:background="@color/color_white"
                android:paddingLeft="8dp"
                android:layout_below="@+id/txt_vendors"/>

            <TextView
                android:id="@+id/txt_support"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/app_textsize_small"
                android:gravity="center_vertical"
                android:text="@string/str_support"
                android:background="@color/light_grey"
                android:paddingLeft="8dp"
                android:layout_below="@+id/txt_editprofile"/>

            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/app_textsize_small"
                android:gravity="center_vertical"
                android:text="@string/str_logout"
                android:background="@color/color_white"
                android:paddingLeft="8dp"
                android:layout_below="@+id/txt_support"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_lightblack"
            android:layout_below="@+id/relabox">

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>
