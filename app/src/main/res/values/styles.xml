<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#191919</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@android:color/black</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@android:color/black</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@android:color/black</item>

        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
    </style>

    <style name="App.Heading.Highlighted" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Styles -->

    <style name="CustomActionBarTabs" parent="@style/Widget.AppCompat.ListView">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#191919</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomFloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:shadowColor">#FFFF0000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="MyButton" parent="@style/Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/black</item>
    </style>

    <style name="Widget.DiscreteSeekBar" parent="android:Widget">
        <item name="dsb_progressColor">@color/dsb_progress_color_list</item>
    </style>
</resources>
